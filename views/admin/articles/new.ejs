<%- include ("../../partials/header.ejs") %>
    <%- include ("../../partials/navbar.ejs") %>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Cadastro de Artigos</h2>
                </div>
                <div class="card-body">
                    <form method="post" action="/articles/save">
                        <input type="text" name="title" placeholder="Defina o tÃ­tulo do artigo"
                            class="form-control"><br>
                        <textarea class="form-control" placeholder="Escreva seu artigo" name="body"
                            id="article"></textarea>
                        <br>
                        <label>Categoria</label>
                        <select name="category" class="form-control">
                            <% categories.map(category=> { %>
                                <option value="<%= categories.id %>">
                                    <%= category.title %>
                                </option>
                                <% }) %>
                        </select>
                        <br>
                        <button class="btn btn-success">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include ("../../partials/footer.ejs") %>

            <script src="/tinymce/js/tinymce/tinymce.min.js"></script>
            <script>
                tinymce.init({
                    language: 'pt_BR',
                    plugins: [
                        'advlist', 'autolink', 'link', 'image',
                        'lists', 'print', 'preview', 'hr',
                        'searchreplace', 'wordcount', 'fullscreen', 'insertdatetime',
                        'media', 'save', 'table', 'paste', 'emoticons'
                    ]
                })
            </script>